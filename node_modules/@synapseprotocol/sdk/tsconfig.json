{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@abis":        ["./src/abis/index"],
      "@abis/*":      ["./src/abis/*"],
      "@bridge":      ["./src/bridge"],
      "@bridge/*":    ["./src/bridge/*"],
      "@common/*":    ["./src/common/*"],
      "@entities":    ["./src/entities"],
      "@contracts":   ["./src/contracts"],
      "@contracts/*": ["./src/contracts/*"],
      "@chainid":     ["./src/common/chainid"],
      "@networks":    ["./src/common/networks"],
      "@internal":    ["./src/internal/index"],
      "@internal/*":  ["./src/internal/*"],
      "@swappools":   ["./src/swappools"],
      "@token":       ["./src/token"],
      "@tokens":      ["./src/tokens"],
      "@tokenswap":   ["./src/tokenswap"]
    },
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "dist",
    "strict": false,
    "esModuleInterop":   true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": false,
    "types": [
      "node",
    ],
    "isolatedModules": true,
    "skipLibCheck": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "examples"
  ]
}